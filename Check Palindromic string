#include <bits/stdc++.h>
using namespace std;

bool Palindrome(string str){
    int i =0,j=str.length()-1;
    while(i<j){
        if(str[i]!=str[j]){
           return false; 
        }
        i++;
        j--;
    }
    return true;
}

int main() {
    // Write C++ code here
    string s;
    cin >> s;
    cout << Palindrome(s);

    return 0;
}
